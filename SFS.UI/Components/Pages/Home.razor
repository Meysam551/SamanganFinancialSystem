@page "/"
@rendermode InteractiveServer
@using static SFS.UI.Components.Layout.FormButtons

<PageTitle>Home</PageTitle>

<div id="top-sec" class="clearfix">
    
    <MainMenu />
    
    <span class="sep"></span>
    
    <SFS_PageTitle />

    <QuickAccessMenu />

</div>

<div id="info" class="clearfix">
    <ApplicationUserInfo />
</div>

<div id="btns">
    <FormButtons ActiveButtons="@(new List<FormButtons.ButtonType> {
                         FormButtons.ButtonType.Delete,
                         FormButtons.ButtonType.Search,
                         FormButtons.ButtonType.Reload
                     })"
                 OnDelete="HandleDelete" />
</div>

<div id="content">
    <div id="part1">
        <table>
            <tr>
                <td>
                    <SFS_Select TItem="int" TValue="int"
                                Label="سال مالی"
                                Items="years"
                                ValueSelector="@(y => y)"
                                TextSelector="@(y => $"{y}")"
                                @bind-Value="selectedYear" />
                </td>
                <td>
                    <SFS_Select TItem="string" TValue="string"
                                Label="نوع ارز"
                                Items="currencyTypes"
                                ValueSelector="@(y => y)"
                                TextSelector="@(y => $"{y}")"
                                @bind-Value="selectedCurrency" />
                </td>
                <td>
                    <SFS_AutoSearchSelect TItem="CustomerDto" TValue="Guid"
                                          Label="مشتری"
                                          LoadItemsAsync="LoadCustomersAsync"
                                          ValueSelector="@(c => c.Id)"
                                          TextSelector="@(c => c.Name)"
                                          @bind-Value="selectedCustomerId" />
                </td>
                <td>
                    <label>سریال سند # شماره سند</label>
                    <input type="text" />

                    <a href="">آخرین شماره</a>
                </td>
                <td>
                    <label>تاریخ سند</label>
                    <input type="text" />
                </td>
                <td>
                    <label>مبلغ سند</label>
                    <input type="text" />
                </td>
            </tr>
        </table>
    </div>
    <div id="part2">
        <label>در وجه</label>
        <input type="text" />
    </div>
    <div id="part3">
        <label>بابت:</label>
        <input type="text" />
        <a href="">از لیست</a>
        <button>ذخیره</button>
    </div>
</div>

<SFS_Grid />

@code {
    private List<int> years = new() { 1402, 1403, 1404 };
    private int selectedYear = 1403;

    private List<string> currencyTypes = new() { "ریال", "دلار", "یورو" };
    private string selectedCurrency = "ریال";

    private Guid selectedCustomerId;

    private async Task<IEnumerable<CustomerDto>> LoadCustomersAsync(string query)
    {
        await Task.Delay(400);
        var all = new List<CustomerDto>
        {
            new(Guid.NewGuid(), "علی احمدی"),
            new(Guid.NewGuid(), "مریم حسینی"),
            new(Guid.NewGuid(), "رضا قربانی"),
            new(Guid.NewGuid(), "ندا سلیمی"),
        };

        return all.Where(x => x.Name.Contains(query, StringComparison.OrdinalIgnoreCase));
    }

    public record CustomerDto(Guid Id, string Name);

